{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "lib": ["es6", "dom", "es2017"],
        "paths": { 
            "components/*": ["src/components"],
            "actions/*": ["src/actions"],
            "reducers/*": ["src/reducers"],
            "selectors/*": ["src/selectors"],
            "utils/*": ["src/utils"]
        }
    },
    "include": ["src"],
    "compileOnSave": false
}
